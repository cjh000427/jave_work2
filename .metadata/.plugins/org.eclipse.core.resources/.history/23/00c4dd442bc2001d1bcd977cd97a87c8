public class FileReaderEx {

	public static void main(String[] args) {

		/*
		 - 문자기반으로 읽어들이는 클래스는 FileReader 입니다.
		 - 2바이트 단위로 읽기 때문에 문자를 읽어들이기 적합합니다.
		 */
		
		FileReader fr = null;
		
		try {
			fr = new FileReader("C:\\Work\\file");
		} catch (Exception e) {
			e.printStackTrace();
		}
		
		
		
		
		
		
		
		
		
		
	}

}








