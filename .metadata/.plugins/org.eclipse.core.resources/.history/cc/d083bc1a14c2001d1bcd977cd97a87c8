package etc.api.io.stream;

import java.io.FileInputStream;
import java.io.FileNotFoundException;
import java.io.FileOutputStream;

public class StreamCopy {

	public static void main(String[] args) {

		FileInputStream oldFile = null;
		FileOutputStream newFile = null;
		
		byte[] arr = new byte[100];

		try {
			oldFile = new FileInputStream("C:\\Work\\file\\picture.jpg");
			newFile = new FileOutputStream("C:\\Users\\ict03-19\\Desktop\\copy.jpg");
			
			
			while(true) {
				//읽어들인 데이터가 있다면 읽은 데이터 길이 반환, 없다면 -1을 반환
				int result = oldFile.read(arr);
				if(result == -1) break;
				
				//바이트 단위로 0에서부터 읽은 크기까지의 파일을 작성.
				newFile.write(arr, 0, result);
			}
			
		} catch (FileNotFoundException e) {
			e.printStackTrace();
		}
		
		
		
		
		
		
	}

}











